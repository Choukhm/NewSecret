<% provide(:title, 'Log In') %>

<%= render "layouts/flashes" %>

<h1>Connexion</h1>

  <div class="form-group">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>
        </br>
        <%= f.label :email %>
        </br>
        <%= f.email_field :email %>

        </br>
        <%= f.label :password %>
        </br>
        <%= f.password_field :password %>

        </br>
        </br>
        <%= f.submit "Connexion", class: "btn btn-primary" %>
        </br>
      <% end %>
    </div>

  </div>
